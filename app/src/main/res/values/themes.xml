<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GiniProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Red" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryVariant">#D32F2F</item>
        <item name="colorOnPrimary">#EF9A9A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#fccf4a</item>
        <item name="colorOnSecondary">#e1a902</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">#D32F2F</item>


    </style>

    <style name="Theme.Green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#388E3C</item>
        <item name="colorOnPrimary">#C8E6C9</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00BCD4</item>
        <item name="colorSecondaryVariant">#6cd1de</item>
        <item name="colorOnSecondary">#0197ab</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="toolbarStyle">@style/LightToolBarStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Brown" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryVariant">#5D4037</item>
        <item name="colorOnPrimary">#D7CCC8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#f6c83f</item>
        <item name="colorOnSecondary">#cf9c02</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="toolbarStyle">@style/LightToolBarStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="LightToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.GiniProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GiniProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GiniProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>